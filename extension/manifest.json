{
  "manifest_version": 3,
  "name": "Real-time Voice Translator",
  "version": "1.0.0",
  "description": "Real-time voice translation for Google Meet",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://streaming.assemblyai.com/*",
    "https://api.assemblyai.com/*",
    "https://api.groq.com/*",
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["processor.js"],
      "matches": ["https://meet.google.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Voice Translator Settings"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}